{
  "name": "otherthing-node",
  "version": "1.0.0",
  "description": "OtherThing Node - Contribute compute to the network",
  "main": "dist/main.js",
  "author": "OtherThing",
  "license": "MIT",
  "scripts": {
    "dev": "npx concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "tsc -p tsconfig.main.json && npx electron .",
    "dev:renderer": "npx vite --config vite.config.ts",
    "build": "npm run build:renderer && npm run build:main",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build --config vite.config.ts",
    "start": "npm run build && electron .",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux",
    "tauri": "tauri",
    "tauri:dev": "npx tauri dev",
    "tauri:build": "npx tauri build",
    "tauri:build:win": "npx tauri build --target x86_64-pc-windows-msvc",
    "server": "npm run build:main && node dist/server.js",
    "server:dev": "tsc -p tsconfig.main.json && node dist/server.js"
  },
  "build": {
    "appId": "com.otherthing.node",
    "productName": "OtherThing Node",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "assets/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "artifactName": "OtherThing-Node-Setup.${ext}",
      "requestedExecutionLevel": "asInvoker"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icon.icns",
      "artifactName": "OtherThing-Node.${ext}",
      "hardenedRuntime": true
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png",
      "artifactName": "OtherThing-Node.${ext}",
      "category": "Network"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "assets/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2.9.6",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/tar": "^6.1.0",
    "@types/uuid": "^8.3.4",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.0",
    "vite": "^5.0.0"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.9.1",
    "@tauri-apps/plugin-shell": "^2.3.4",
    "@walletconnect/ethereum-provider": "^2.23.4",
    "@web3modal/ethers": "^5.1.11",
    "adm-zip": "^0.5.10",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.6",
    "dotenv": "^17.2.4",
    "elid-wasm": "github:zachhandley/ELID",
    "ethers": "^6.16.0",
    "express": "^5.2.1",
    "lucide-react": "^0.294.0",
    "mermaid": "^11.12.2",
    "node-appwrite": "^22.0.0",
    "qrcode.react": "^4.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "systeminformation": "^5.21.0",
    "tar": "^6.2.0",
    "uuid": "^8.3.2",
    "ws": "^8.14.0",
    "zod": "^3.25.76"
  }
}
