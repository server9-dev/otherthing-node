{
  "name": "otherthing-node",
  "version": "1.0.0",
  "description": "OtherThing Node - Contribute compute to the network",
  "main": "dist/main.js",
  "author": "OtherThing",
  "license": "MIT",
  "scripts": {
    "copy-html": "node -e \"require('fs').copyFileSync('src/index.html', 'dist/index.html')\"",
    "start": "tsc && npm run copy-html && electron .",
    "dev": "tsc && npm run copy-html && electron .",
    "build": "tsc && npm run copy-html",
    "pack": "tsc && npm run copy-html && electron-builder --dir",
    "dist": "tsc && npm run copy-html && electron-builder",
    "dist:win": "tsc && npm run copy-html && electron-builder --win",
    "dist:mac": "tsc && npm run copy-html && electron-builder --mac",
    "dist:linux": "tsc && npm run copy-html && electron-builder --linux"
  },
  "build": {
    "appId": "com.otherthing.node",
    "productName": "OtherThing Node",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "assets/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "artifactName": "OtherThing-Node-Setup.${ext}"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icon.icns",
      "artifactName": "OtherThing-Node.${ext}"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png",
      "artifactName": "OtherThing-Node.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico"
    }
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/ws": "^8.18.1",
    "@types/tar": "^6.1.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "adm-zip": "^0.5.10",
    "systeminformation": "^5.21.0",
    "tar": "^6.2.0",
    "ws": "^8.14.0"
  }
}
